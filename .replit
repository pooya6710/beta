modules = ["php", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["php"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Main Telegram Bot"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Main Telegram Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php fixed_telegram_bot.php"

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:5000"]

[[ports]]
localPort = 5000
externalPort = 80
